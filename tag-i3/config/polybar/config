; Polybar configuration

[colors]
;background = ${xrdb:background:#000000}
background = #d0000000
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground:#dfdfdf}
foreground-alt = ${xrdb:color8:#808080}
ok = ${xrdb:color2:#00ff00}
warn = ${xrdb:color3:#ffff00}
alert = ${xrdb:color1:#bd2c40}

primary = ${xrdb:color3:#ffb52a}
secondary = ${xrdb:color5:#e60053}

[bar/topbar]
;monitor = ${env:MONITOR:DVI-I-1}
width = 100%
height = 36
tray-maxsize = 28
;tray-scale = 2
;offset-x = 1%
;offset-y = 1%
radius = 4.0
fixed-center = true
dpi = ${xrdb:Xft.dpi:-1}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = ${colors.foreground-alt}

border-size = 2p
border-color = ${colors.background-alt}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Ubuntu Mono:style=Regular:size=8
font-1 = Symbola:style=Regular:size=8
;font-2 = siji:pixelsize=10;2

modules-left = i3 xwindow
modules-center = 
modules-right = filesystem cpu memory eth wifi temperature battery xkeyboard pulseaudio date

tray-position = right
tray-padding = 2
;tray-transparent = true
tray-background = ${colors.background}

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = default

[module/xwindow]
type = internal/xwindow
label = %title:0:64:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "‚å® "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.background-alt}

label-layout = %layout%
