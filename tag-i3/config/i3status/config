# i3status configuration file.
general {
        colors = true
        interval = 5
}

order += "disk /"
# order += "disk /home"
# order += "run_watch DHCP"
order += "run_watch VPN"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
# order += "battery 0"
# order += "battery 1"
# order += "load"
order += "cpu_usage"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
	integer_battery_capacity = true
	format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

battery 1 {
        format = "%status %percentage %remaining"
	format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/NetworkManager/nm-vpnc-*.pid"
}

tztime local {
	format = "%a %b %e, %l:%M %p"
}

load {
        format = "%1min"
}

cpu_usage {
	format = "CPU: %usage"
	format_above_threshold = "CPU: â—%usage"
	max_threshold = 95
}

disk "/" {
        format = "/:%avail"
}

disk "/home" {
        format = "/home:%avail"
}
